<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_bottom_sheet"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="@string/welcome_banner_title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <include
        android:id="@+id/audioWelcomeItem"
        layout="@layout/view_welcome_item" />

    <include
        android:id="@+id/autoWelcomeItem"
        layout="@layout/view_welcome_item" />

    <include
        android:id="@+id/readWelcomeItem"
        layout="@layout/view_welcome_item" />

    <Button
        android:id="@+id/confirmBtn"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="32dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="8dp"
        android:text="@string/btn_confirm"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@color/button"
        app:cornerRadius="32dp" />
</LinearLayout>